{
  /*
   * JWT (JSON Web Token) Konfigürasyon Ayarları
   * Bu bölüm JWT token oluşturma ve doğrulama ayarlarını içerir
   */
  "Jwt": {
    // Token imzalama için kullanılacak gizli anahtar
    // GERÇEK PROJELERDE BU ANAHTAR ASLA KOD İÇİNDE TUTULMAMALI,
    // GÜVENLİ BİR ŞEKİLDE (Azure Key Vault, Environment Variable vb.) SAKLANMALIDIR
    // Minimum 256 bit (32 karakter) uzunluğunda olmalıdır
    "Key": "buradaçokÇılgınbiranahtarMetiniOlmasıL4zim.!",

    // Token'ı yayınlayan tarafın adı (issuer claim)
    "Issuer": "CalendarApp",

    // Token'ın hangi uygulamalar tarafından kullanılabileceği (audience claim)
    "Audience": "CalendarAppUsers"
  },

  /*
   * Logging Konfigürasyon Ayarları
   * Uygulamanın loglama davranışını kontrol eder
   */
  "Logging": {
    "LogLevel": {
      // Varsayılan log seviyesi
      "Default": "Information",

      // Microsoft.AspNetCore kategorisindeki loglar için özel seviye
      // Warning ve üzeri seviyedeki logları kaydeder
      "Microsoft.AspNetCore": "Warning"
    }
  },

  /*
   * Hosting Konfigürasyon Ayarları
   * Uygulamanın hangi hostlarda çalışabileceğini belirtir
   */
  "AllowedHosts": "*" // Tüm hostlara izin ver ('*' yerine spesifik domainler de yazılabilir)
}